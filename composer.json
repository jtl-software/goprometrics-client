{
  "name": "jtl/go-prom-client",
  "type": "library",
  "description": "PHP-Client to use the JTL GoProm Service",
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "ext-curl": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "jtl/php-generic-collection": "^0.3.0",
    "guzzlehttp/guzzle": "^6.5",
    "phpunit/phpunit": "^9.1"
  },
  "suggest": {
    "guzzlehttp/guzzle": "Required to interact with GoProm",
    "jtl/php-generic-collection": "Required for TagList"
  },
  "autoload": {
    "psr-4": {
      "JTL\\GoProm\\Client\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JTL\\GoProm\\Client\\": "src/"
    }
  },
  "config": {
    "platform": {
      "php": "7.4.0"
    },
    "sort-packages": true
  },
  "scripts": {
    "phpcs": [
      "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist"
    ],
    "phpcs-dry": [
      "vendor/bin/php-cs-fixer fix --config=./.php_cs.dist --dry-run"
    ]
  }
}
